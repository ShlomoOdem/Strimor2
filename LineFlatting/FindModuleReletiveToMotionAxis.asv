function [MovingModuleInd,MovingModuleLocInAllModuleInd] = FindModuleReletiveToMotionAxis(R,ModuleInd,AllModuleInd,Axis,ForwardDir)

[Row,~] = find(R{Axis} == ModuleInd,1);
if ForwardDir
    LineRange = (Row+1):size(R{Axis},1);
else
    LineRange = (1:Row-1);
end
MovingModuleLocInAllModuleInd = ismember(AllModuleInd,R{Axis}(LineRange,:));
MovingModuleInd = AllModuleInd(MovingModuleLocInAllModuleInd);

end
